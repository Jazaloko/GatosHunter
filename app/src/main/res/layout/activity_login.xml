<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Sección superior: Layout horizontal con imagen y botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <!-- Sección de imagen y texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <!-- Imagen -->
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_gato1" />

            <!-- Primer TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_gravity="center"
                android:text="¡Bienvenido a Gatos Hunter!"
                android:textColor="#808080"
                android:textSize="14sp" />

            <!-- Segundo TextView -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Porfavor Inicia Sesion"
                android:textColor="#000000"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Nuevo LinearLayout (contenedor principal inferior) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EEEEEE"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Primer TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:text="Introduzca el nombre de usuario:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Primer EditText -->
        <EditText
            android:id="@+id/userName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#D0D0D0"/>

        <!-- Segundo TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:gravity="center"
            android:text="Introduzca la Contraseña:"
            android:textColor="#000000"
            android:textSize="14sp" />

        <!-- Segundo EditText -->
        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="#D0D0D0"
            android:inputType="textPassword"/>

        <!-- Botón "Has olvidado la contraseña" -->
        <Button
            android:id="@+id/buttonLost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Has olvidado la contraseña"
            android:textColor="#000000"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:textStyle="normal"
            android:textAllCaps="false" />

        <!-- Contenedor de botones principales -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Botón Iniciar Sesión -->
            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#6200EE"
                android:text="Iniciar Sesion"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <!-- Separador con texto "o" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="o"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="#000000" />
            </LinearLayout>

            <!-- Botón Registrarse -->
            <Button
                android:id="@+id/buttonRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:backgroundTint="#6200EE"
                android:text="Registrarse"
                android:textAllCaps="false"
                android:textColor="#FFFFFF" />

            <!-- NUEVO: Imagen y botón en una fila -->
            </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <!-- Imagen de gato a la izquierda -->
        <ImageView
            android:id="@+id/imageGatoInicio"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/gatoinicio"
            android:contentDescription="Imagen de Gato de Inicio"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <!-- Botones en vertical a la derecha -->
        <LinearLayout
            android:layout_width="212dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonPolitica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="Política de Juego"
                android:textAllCaps="false"
                android:textColor="#000000" />

            <Button
                android:id="@+id/buttonAvisoLegal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:text="Aviso Legal"
                android:textAllCaps="false"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

        <!-- Botón Aviso Legal -->
    </LinearLayout>
